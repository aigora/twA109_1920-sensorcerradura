#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <windows.h>
// Por ahora esta es la version sencilla donde los bordes son estaticos
int comparador( int x, int y, int M[][y]);
void Imprime( int a,int b, int I[][b]);
int main(int argc, char *argv[]) {
int Alto,Ancho;
int S=0;
int i,j,o;
printf("Introduzca cuantas unidades Altura y Anchura desea para el perimetro del experimento \n");
scanf("%d %d",&Alto,&Ancho);
int Vieja[Alto][Ancho],Nueva[Alto][Ancho];
// Generacion de la Matriz aleatoria
srand(time(NULL));
for (i=0;i<Alto;i++){
for(j=0;j<Ancho;j++){
 Vieja[i][j]=0+rand()%(1-0+1);
 if(Vieja[i][j]==1)
 printf("*");
 else{if(Vieja[i][j]==0)
 printf(" ");
 }}
 printf("\n");
}
printf("PULSE ENTER PARA EMPEZAR")
system("pause");
while(1){
Sleep(100);
system("cls");
for (i=0;i<Alto;i++){
for(j=0;j<Ancho;j++){
 S = comparador(i,j,Vieja);
//Cambio a la nueva Matriz
if(S==3){
Nueva[i][j]=1;
}
else{if(S<2||S>3)
Nueva[i][j]=0;
} S=0;
Imprime(i,j,Nueva);
Vieja[i][j]=Nueva[i][j];//Esta Linea no se si esta bien hecha o si habria que ponerlo de otra forma
}printf("\n");
} 
}return 0;
}
// Funcion de comparacion de elementos de la Matriz
int comparador( int x, int y, int M[][y]){
int i ,j, suma = 0 ;	
for (i= -1;i<2;i++){
for(j= -1;j<2;j++){	
if(M[x+i][y+j]== 1){
suma = suma+1;
}}}
if(M[x][y]==1){
suma = suma -1;}
return suma;
suma=0;
}
void Imprime( int a,int b,int I[][b]){
if(I[a][b]==1){
printf("*");}
else 
if(I[a][b]==0) printf(" ");
}

